{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple radial chart with embedded data.",
 "data": {
    "url": "https://raw.githubusercontent.com/KaiWenUn/FIT3179/main/homeworkW10/data/2015.csv"
  },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"}
  },{
    "mark": {"type": "text", "radiusOffset": 10},
    "encoding": {
      "text": {"field": "Health (Life Expectancy)", "type": "quantitative"}
    }
  }],
  "encoding": {
    "theta": {"field": "Health (Life Expectancy)", "type": "quantitative", "stack": true},
    "radius": {"field": "158", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
    "color": {"field": "Health (Life Expectancy)", "type": "nominal", "legend": null}
  },
  "view": {"stroke": null}
}
