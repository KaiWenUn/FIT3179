{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "World Happiness Score (2015)",
  "width": 750,
  "height": 350,
  "layer": [ {
  "data": {
    "url": "https://raw.githubusercontent.com/KaiWenUn/FIT3179/main/homeworkW9/js/happiness.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [ 
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/KaiWenUn/FIT3179/main/homeworkW9/data/2015.csv"
        },
        "key": "Country",
        "fields": ["Happiness_Score"]
      }
    },
    {"calculate": "datum.Happiness_Score", "as": "Happiness Score"}
  ],
  "projection": {"type": "equirectangular"},
        "mark": {"type": "geoshape", "stroke": "#ff00ddfd", "strokeWidth": 1.0},
      "selection": {
        "highlight": {"type": "single", "empty": "none", "on": "mouseover"},
        "select": {"type": "multi"}
      },
  "encoding": {
    "color": {
      "field": "Happiness Score",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
            "strokeWidth": {
          "condition": [
            {
              "test": {
                "and": [
                  {"selection": "select"},
                  "length(data(\"select_store\"))"
                ]
              },
              "value": 1.5
            },
            {"selection": "highlight", "value": 1.5}
          ],
          "value": 0
        },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {
        "field": "Happiness_Score",
        "type": "quantitative",
        "title": "Happiness Score"
      }
    ]
  }
}
  ]
}
